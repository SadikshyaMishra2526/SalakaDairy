<resources>

    <style name="Widget.Theme.SalakaFarm.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/main_color</item>

    </style>

    <style name="Widget.Theme.SalakaFarm.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/main_color</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_17sdp</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
    </style>

    <style name="otp_style">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:background">@drawable/capsule</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>

        <item name="android:background">@drawable/capsule</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/btn_txt_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editLeftIcon" parent="parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginEnd">@dimen/_302sdp</item>
        <item name="android:contentDescription">Image Description</item>
    </style>


    <style name="verticalTextStyle"
        parent="android:Widget.TextView">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="product_view_design">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
    </style>
</resources>