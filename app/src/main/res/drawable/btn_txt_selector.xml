<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/spanish_green"
                android:endColor="@color/main_color"
                android:angle="270" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/sub_color" />
            <corners
                android:radius="@dimen/_10sdp" />
            <padding
                android:left="@dimen/_5sdp"
                android:top="@dimen/_5sdp"
                android:right="@dimen/_5sdp"
                android:bottom="@dimen/_5sdp" />
            <size
                android:height="@dimen/_45sdp"
                android:width="@dimen/_250sdp" />

        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/main_color" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <corners
                android:radius="@dimen/_10sdp" />
            <padding
                android:left="@dimen/_5sdp"
                android:top="@dimen/_5sdp"
                android:right="@dimen/_5sdp"
                android:bottom="@dimen/_5sdp" />
            <size
                android:height="@dimen/_45sdp"
                android:width="@dimen/_250sdp" />

        </shape>
    </item>
</selector>