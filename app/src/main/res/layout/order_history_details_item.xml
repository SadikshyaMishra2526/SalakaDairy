<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <ImageView
                android:id="@+id/product_thumbnail"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/logo"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center"
                android:scaleType="fitXY" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">
            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:textColor="@color/sub_color"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/product_sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:textColor="@color/tab_indicator_gray"
                android:textSize="@dimen/_8sdp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/product_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp" />
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:textColor="@color/main_color" />

            </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

             <TextView
                 android:id="@+id/product_price_total"
                 android:layout_width="wrap_content"

                 android:layout_height="wrap_content"
                 android:layout_margin="@dimen/_2sdp"
                 android:textColor="@color/main_color" />
             <View
                 android:layout_width="0dp"
                 android:layout_height="0dp"
                 android:layout_weight="1"/>

             <androidx.cardview.widget.CardView
                 android:layout_width="wrap_content"
                 android:layout_height="@dimen/_25sdp"
                 android:layout_alignParentEnd="true"
                 android:layout_marginEnd="@dimen/_10sdp"
                 android:layout_marginBottom="@dimen/_5sdp"
                 android:layout_alignParentBottom="true"
                 app:cardCornerRadius="@dimen/_5sdp"
                 android:backgroundTint="@color/white">
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_margin="@dimen/_3sdp"
                     android:layout_height="match_parent">
                     <ImageButton
                         android:id="@+id/product_add_to_wishlist"
                         android:layout_width="@dimen/_18sdp"
                         android:layout_gravity="center"
                         android:layout_margin="@dimen/_5sdp"
                         android:background="@drawable/favourite"
                         android:layout_height="@dimen/_18sdp"/>
                     <View
                         android:layout_width="1dp"
                         android:layout_gravity="center"
                         android:background="@color/tab_indicator_gray"
                         android:layout_height="match_parent" />
                     <ImageButton
                         android:id="@+id/product_add_to_compare_list"
                         android:layout_gravity="center"
                         android:layout_margin="@dimen/_5sdp"
                         android:background="@drawable/compare"
                         android:layout_width="@dimen/_18sdp"
                         android:layout_height="@dimen/_18sdp"/>
                     <View
                         android:layout_width="1dp"
                         android:layout_gravity="center"
                         android:background="@color/tab_indicator_gray"
                         android:layout_height="match_parent" />
                     <ImageButton
                         android:id="@+id/product_add_to_cart"
                         android:layout_gravity="center"
                         android:layout_margin="@dimen/_5sdp"
                         android:background="@drawable/ic_baseline_shopping_cart_24"
                         android:layout_width="@dimen/_18sdp"
                         android:layout_height="@dimen/_18sdp"/>
                 </LinearLayout>
             </androidx.cardview.widget.CardView>

         </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>