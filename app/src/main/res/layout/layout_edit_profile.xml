<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/edit_profile"
    android:layout_gravity="center"
    android:background="@color/sub_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sub_color"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/your_personal_details"
            android:textColor="@color/sub_color"
            android:textSize="@dimen/_20sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_picture"
                    android:textColor="@color/main_color" />
                <ImageView
                    android:id="@+id/customer_avatar"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="@dimen/_60sdp"
                    android:padding="@dimen/_5sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_person_24"
                    android:background="@drawable/edit_view"
                    android:layout_height="@dimen/_60sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name"
                    android:textColor="@color/main_color" />
                <EditText
                    android:id="@+id/customer_first_name"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="@dimen/_150sdp"
                    android:padding="@dimen/_5sdp"
                    android:inputType="textCapSentences"
                    android:background="@drawable/edit_view"
                    android:layout_height="@dimen/_30sdp" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_margin="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/last_name"
                        android:textColor="@color/main_color" />

                    <EditText
                        android:id="@+id/customer_last_name"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_width="@dimen/_150sdp"
                        android:padding="@dimen/_5sdp"
                        android:inputType="textCapSentences"
                        android:background="@drawable/edit_view"
                        android:layout_height="@dimen/_30sdp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_margin="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:text="DOB"
                        android:textColor="@color/main_color" />

                    <TextView
                        android:id="@+id/customer_DOB"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_width="@dimen/_150sdp"
                        android:text="@string/click_here_to_choose"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="@drawable/edit_view"
                        android:layout_height="@dimen/_30sdp"
                        android:focusable="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/gender" />

                    <RadioGroup
                        android:id="@+id/customer_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/customer_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/male" />

                        <RadioButton
                            android:id="@+id/customer_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/female" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/cancel"
                        style="@style/loginButton"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/main_color"
                        android:text="@string/cancel" />

                    <TextView
                        android:id="@+id/continuebtn"
                        style="@style/loginButton"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/main_color"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text="@string/update" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>