<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/sub_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sub_color"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:text="Your Personal Details"
            android:textColor="@color/sub_color"
            android:textSize="@dimen/_20sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textColor="@color/main_color" />
                <EditText
                    android:id="@+id/customer_first_name"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="@dimen/_150sdp"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/edit_view"
                    android:layout_height="@dimen/_30sdp" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_margin="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:text="Last Name"
                        android:textColor="@color/main_color" />

                    <EditText
                        android:id="@+id/customer_last_name"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_width="@dimen/_150sdp"
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/edit_view"
                        android:layout_height="@dimen/_30sdp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_margin="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:text="DOB"
                        android:textColor="@color/main_color" />

                    <TextView
                        android:id="@+id/customer_DOB"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_width="@dimen/_150sdp"
                        android:text="Click Here to Choose"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="@drawable/edit_view"
                        android:layout_height="@dimen/_30sdp"
                        android:focusable="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Gender " />

                    <RadioGroup
                        android:id="@+id/customer_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/customer_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male" />

                        <RadioButton
                            android:id="@+id/customer_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp">

                    <Button
                        android:id="@+id/cancel"
                        style="@style/loginButton"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="Cancel" />

                    <Button
                        android:id="@+id/continuebtn"
                        style="@style/loginButton"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text="Update " />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>