<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/select_sub_package"
    android:elevation="@dimen/_5sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Subscription_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_10sdp"
            android:text="Quatarly Subscription" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@color/sub_color" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/milk_cartoon" />


        <TextView

            android:layout_gravity="center"
            android:id="@+id/tv_Subscription_Price"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/sub_color"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_gravity="center"
            android:id="@+id/tv_Subscription_Days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_gravity="center"
            android:id="@+id/tv_Subscription_Discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>